@model IEnumerable<EstoqueWeb.Models.Produto>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produtos - Sistema de Controle de Estoque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @Html.Partial("_Layout")

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Gerenciar Produtos</h1>
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("CadastrarProduto", "Produto")'">
                        <i class="bi bi-plus-circle"></i> Novo Produto
                    </button>

                </div>

                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-action="Index" asp-controller="Produto" method="get">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                                        <input type="text" class="form-control" id="searchProduto" name="produtoNome" placeholder="Buscar produto...">
                                    </div>
                                </form>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Tabela de Produtos -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>Preço de Custo</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody id="tabelaProdutos">
                                    @foreach(var produto in Model)
                                    {
                                        <tr>
                                            <td>@produto.Id</td>
                                            <td>@produto.Nome</td>
                                            <td>@produto.PrecoCusto</td>
                                            <td><a asp-action="Details" asp-controller="Produto" asp-route-id="@produto.Id">Detalhes</a></td>
                                            <td><a asp-action="Update" asp-controller="Produto" asp-route-id="@produto.Id">Atualizar</a></td>
                                            <td><a asp-action="Delete" asp-controller="Produto" asp-route-id="@produto.Id">Excluir</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts/api.js"></script>
    <script src="scripts/produtos.js"></script>
</body>
</html>
