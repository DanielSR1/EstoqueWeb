<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Estoque - Sistema de Controle de Estoque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @Html.Partial("_Layout")

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Controle de Estoque</h1>
                    <div class="btn-group">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#estoqueModal" onclick="limparFormEstoque()">
                            <i class="bi bi-plus-circle"></i> Novo Item
                        </button>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="filtroLoja" class="form-label">Filtrar por Loja</label>
                                <select class="form-select" id="filtroLoja">
                                    <option value="">Todas as lojas</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filtroProduto" class="form-label">Filtrar por Produto</label>
                                <select class="form-select" id="filtroProduto">
                                    <option value="">Todos os produtos</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filtroEstoque" class="form-label">Nível de Estoque</label>
                                <select class="form-select" id="filtroEstoque">
                                    <option value="">Todos os níveis</option>
                                    <option value="baixo">Baixo (< 10)</option>
                                    <option value="medio">Médio (10-50)</option>
                                    <option value="alto">Alto (> 50)</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <button class="btn btn-outline-secondary w-100" onclick="limparFiltros()">
                                    <i class="bi bi-x-circle"></i> Limpar Filtros
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resumo -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Total de Itens</h5>
                                <h3 id="resumoTotalItens">0</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-success">Valor Total</h5>
                                <h3 id="resumoValorTotal">R$ 0,00</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Baixo Estoque</h5>
                                <h3 id="resumoBaixoEstoque">0</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-info">Produtos Únicos</h5>
                                <h3 id="resumoProdutosUnicos">0</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabela de Estoque -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Loja</th>
                                        <th>Produto</th>
                                        <th>Quantidade</th>
                                        <th>Preço Unitário</th>
                                        <th>Valor Total</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody id="tabelaEstoque">
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            <div class="spinner-border" role="status">
                                                <span class="visually-hidden">Carregando...</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal Estoque -->
    <div class="modal fade" id="estoqueModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="estoqueModalTitle">Novo Item de Estoque</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formEstoque">
                        <input type="hidden" id="estoqueId">
                        <div class="mb-3">
                            <label for="estoqueLoja" class="form-label">Loja *</label>
                            <select class="form-select" id="estoqueLoja" required>
                                <option value="">Selecione uma loja</option>
                            </select>
                            <div class="invalid-feedback">
                                Por favor, selecione uma loja.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="estoqueProduto" class="form-label">Produto *</label>
                            <select class="form-select" id="estoqueProduto" required>
                                <option value="">Selecione um produto</option>
                            </select>
                            <div class="invalid-feedback">
                                Por favor, selecione um produto.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="estoqueQuantidade" class="form-label">Quantidade *</label>
                            <input type="number" class="form-control" id="estoqueQuantidade" min="0" required>
                            <div class="invalid-feedback">
                                Por favor, informe uma quantidade válida.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="estoqueObservacao" class="form-label">Observação</label>
                            <textarea class="form-control" id="estoqueObservacao" rows="3" placeholder="Observações sobre o item de estoque"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarEstoque()">
                        <span class="spinner-border spinner-border-sm d-none" id="loadingEstoque"></span>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Movimentação -->
    <div class="modal fade" id="movimentacaoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Movimentação de Estoque</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formMovimentacao">
                        <input type="hidden" id="movimentacaoEstoqueId">
                        <div class="mb-3">
                            <label class="form-label">Produto</label>
                            <input type="text" class="form-control" id="movimentacaoProduto" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quantidade Atual</label>
                            <input type="text" class="form-control" id="movimentacaoQuantidadeAtual" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="movimentacaoTipo" class="form-label">Tipo de Movimentação</label>
                            <select class="form-select" id="movimentacaoTipo" required>
                                <option value="">Selecione o tipo</option>
                                <option value="entrada">Entrada</option>
                                <option value="saida">Saída</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="movimentacaoQuantidade" class="form-label">Quantidade</label>
                            <input type="number" class="form-control" id="movimentacaoQuantidade" min="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="movimentacaoMotivo" class="form-label">Motivo</label>
                            <textarea class="form-control" id="movimentacaoMotivo" rows="3" placeholder="Motivo da movimentação"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="salvarMovimentacao()">
                        Confirmar Movimentação
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts/api.js"></script>
    <script src="scripts/estoque.js"></script>
</body>
</html>
