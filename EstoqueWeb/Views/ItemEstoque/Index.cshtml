@model EstoqueWeb.Models.ItemEstoqueViewModel
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Estoque - Sistema de Controle de Estoque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @Html.Partial("_Layout")

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Controle de Estoque</h1>
                    <div class="btn-group">
                        <a asp-action="CadastrarItem" asp-controller="ItemEstoque" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Novo Item
                        </a>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="filtroLoja" class="form-label">Filtrar por Loja</label>
                                <select class="form-select" id="filtroLoja">
                                    <option value="">Todas as lojas</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filtroProduto" class="form-label">Filtrar por Produto</label>
                                <select class="form-select" id="filtroProduto">
                                    <option value="">Todos os produtos</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="filtroEstoque" class="form-label">Nível de Estoque</label>
                                <select class="form-select" id="filtroEstoque">
                                    <option value="">Todos os níveis</option>
                                    <option value="baixo">Baixo (< 10)</option>
                                    <option value="medio">Médio (10-50)</option>
                                    <option value="alto">Alto (> 50)</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <button class="btn btn-outline-secondary w-100" onclick="limparFiltros()">
                                    <i class="bi bi-x-circle"></i> Limpar Filtros
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resumo -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Total de Itens</h5>
                                <h3 id="resumoTotalItens">@Model.TotalItens</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-success">Valor Total</h5>
                                <h3 id="resumoValorTotal">@Model.ValorTotal</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Baixo Estoque</h5>
                                <h3 id="resumoBaixoEstoque">0</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-info">Produtos Únicos</h5>
                                <h3 id="resumoProdutosUnicos">0</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabela de Estoque -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>ProdutoID</th>
                                        <th>Loja</th>
                                        <th>Quantidade</th>
                                        <th>Preço Unitário</th>
                                    </tr>
                                </thead>
                                <tbody id="tabelaItemEstoque">
                                    @foreach (var ItemEstoque in Model.Items)
                                    {
                                        <tr>
                                            <td>@ItemEstoque.Id</td>
                                            <td>@ItemEstoque.ProdutoId</td>
                                            <td>@ItemEstoque.LojaId</td>
                                            <td>@ItemEstoque.Quantidade</td>
                                            <td>@ItemEstoque.ProdutoId</td>
                                            <td><a asp-action="Details" asp-controller="ItemEstoque" asp-route-id="@ItemEstoque.Id">Detalhes</a></td>
                                            <td><a asp-action="Update" asp-controller="ItemEstoque" asp-route-id="@ItemEstoque.Id">Atualizar</a></td>
                                            <td><a asp-action="Delete" asp-controller="ItemEstoque" asp-route-id="@ItemEstoque.Id">Excluir</a></td>
                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts/api.js"></script>
    <script src="scripts/estoque.js"></script>
</body>
</html>
