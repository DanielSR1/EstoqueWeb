@model Loja
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Loja - Sistema de Controle de Estoque</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @Html.Partial("_Layout")

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="bi bi-plus-circle"></i> Cadastrar Nova Loja
                    </h1>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-box"></i> Informações da loja
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Formulário -->
                        <form asp-action="Create" asp-controller="Loja">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="LojaNome" class="form-label">Nome da loja *</label>
                                        <input type="text" class="form-control" id="LojaNome" asp-for="Nome" required maxlength="50" placeholder="Digite o nome da loja">
                                        <div class="invalid-feedback">
                                            Por favor, informe o nome da loja.
                                        </div>
                                        <div class="form-text">Máximo 50 caracteres</div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="LojaEndereco" class="form-label">Endereço da loja *</label>
                                        <input type="text" class="form-control" id="LojaEndereco" asp-for="Endereco" required maxlength="60" placeholder="Digite o endereço da loja">
                                        <div class="invalid-feedback">
                                            Por favor, informe o endereço da loja.
                                        </div>
                                        <div class="form-text">Máximo 60 caracteres</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Botões -->
                            <hr>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <button type="button" class="btn btn-outline-secondary me-2" onclick="cancelarCadastro()">
                                        <i class="bi bi-x-circle"></i> Cancelar
                                    </button>
                                    <button type="submit" class="btn btn-success">
                                        <span class="spinner-border spinner-border-sm d-none" id="loadingSalvar"></span>
                                        <i class="bi bi-check-circle"></i> Cadastrar Loja
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Modal de Sucesso -->
                <div class="modal fade" id="modalSucesso" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-check-circle"></i> Loja Cadastrada!
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                                </div>
                                <h5>Loja cadastrada com sucesso!</h5>
                                <p class="text-muted">A loja <strong id="nomeLojaCadastrado"></strong> foi adicionada ao sistema.</p>
                                <p><strong>ID da Loja:</strong> <span id="idLojaCadastrado" class="badge bg-primary"></span></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" onclick="cadastrarOutro()">
                                    <i class="bi bi-plus-circle"></i> Cadastrar Outro
                                </button>
                                <button type="button" class="btn btn-primary" onclick="verLoja()">
                                    <i class="bi bi-eye"></i> Ver Loja
                                </button>
                                <button type="button" class="btn btn-success" onclick="irParaLista()">
                                    <i class="bi bi-list"></i> Ver Lista
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="scripts/api.js"></script>
    <script src="scripts/cadastrar.js"></script>
</body>
</html>
